<?xml version="1.0" encoding="utf-8"?>
<template>
	<name>viewForm</name>
	<filePath>WebRoot/WEB-INF/views/business/organization/${lastPackageName}/${moduleName}/${subModuleName}</filePath>
	<fileName>${className}Show.jsp</fileName>
	<content><![CDATA[
<%@ page contentType="text/html;charset=UTF-8" %>
<%@ include file="/WEB-INF/views/include/taglib.jsp"%>
<html>
<head>
	<title>${functionNameSimple}管理</title>
	<meta name="decorator" content="default"/>
	<script type="text/javascript">
		$(document).ready(function() {
		});
	</script>
</head>
<body>
	<div class="main">
		<div class="main-box">
			<div class="main-box-title">
				<i class="glyphicon glyphicon-folder-open"></i><span>查看${functionNameSimple}</span>
			</div>	

			<form:form id="inputForm" modelAttribute="${className}" action="${r"${ctx}"}/${urlPrefix}/save" method="post" class="form-horizontal view-form show-form">
				<form:hidden path="id"/>
				<sys:message content="${r"${message}"}"/>		
				<#list table.columnList as c>
					<#if c.isEdit?? && c.isEdit == "1" && (c.isNotBaseField || c.simpleJavaField == 'remarks')>
				<div class="form-group col-md-6">
					<label for="${c.javaFieldId}" class="col-md-4 control-label">${c.comments}：</label>
					<div class="col-md-7">
					<#if c.showType == "input">
						<span class="input-show">${"$"}{${className}.${c.javaFieldId}}</span>
					<#elseif c.showType == "textarea">
						<span class="input-show">${"$"}{${className}.${c.javaFieldId}}</span>
					<#elseif c.showType == "select">
						<form:select path="${c.javaFieldId}" class="form-select <#if c.isNull != "1">required</#if>" >
							<form:option value="" label=""/>
							<form:options items="${"$"}{fns:getDictList('${c.dictType}')}" itemLabel="label" itemValue="value" htmlEscape="false"/>
						</form:select>
					<#elseif c.showType == "checkbox">
						<form:checkboxes path="${c.javaFieldId}" items="${"$"}{fns:getDictList('${c.dictType}')}" itemLabel="label" itemValue="value" htmlEscape="false" class="form-checkbox <#if c.isNull != "1">required</#if>" />
					<#elseif c.showType == "radiobox">
						<form:radiobuttons path="${c.javaFieldId}" items="${"$"}{fns:getDictList('${c.dictType}')}" itemLabel="label" itemValue="value" htmlEscape="false" class="form-checkbox <#if c.isNull != "1">required</#if>" />
					<#elseif c.showType == "dateselect">
						<span class="input-show"><fmt:formatDate value="${"$"}{${className}.${c.javaFieldId}}" pattern="yyyy-MM-dd HH:mm:ss"/></span>
					<#elseif c.showType == "userselect">
						<span class="input-show">${"$"}{${className}.${c.javaFieldName}}</span>
					<#elseif c.showType == "officeselect">
						<span class="input-show">${"$"}{${className}.${c.javaFieldName}}</span>
					<#elseif c.showType == "areaselect">
						<span class="input-show">${"$"}{${className}.${c.javaFieldName}}</span>
					<#elseif c.showType == "fileselect">
						<input type="file" />
					</#if>					
					</div>
					<div class="col-md-7 col-md-offset-4 errPlace"></div>
				</div>
					</#if>
				</#list>
			</form:form>
		</div>
		<div class="main-box" style="margin-bottom: 0px;">
			<div class="form-group col-md-12 btn-group" style="min-height: 45px;">
				<div class="col-md-12">
					<input id="btnCancel" class="btn btn-gray f-right" type="button" value="返回" onclick="history.go(-1)" />
				</div>
			</div>
		</div>
	</div>
</body>
</html>]]>
	</content>
</template>